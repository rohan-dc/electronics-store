<!-- all categories page; index page -->
<p id="notice"><%= notice %></p>


<!-- user to enter csv url -->
<p style="margin-bottom: 5px; margin-left: 0px;" class=fancy_font>Enter the csv URL in the text box below (Optional); 
  If left blank; default file will be pushed to the db</p>

<%= form_tag("/seed", method: "post") do %>
  <%= text_field_tag(:csv_url) %>
  <%= submit_tag("Trigger Import", id: "import_complete") %>
<% end %>


<div id="hidden_div">
   <p>Import Complete</p>
</div>


<h1>Product Categories</h1>

<!-- display all categories -->
<table class=table style="margin-top: 20px;">
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><a href="/categories/<%= category.id %>"><%= category.name %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @products %>
